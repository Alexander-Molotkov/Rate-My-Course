<div class="container border rounded my-5 w-50 p-4">
    <h1 class="mb-4">Sign up</h1>

    <form action="/signup" method="POST">
        <div class="form-group">
            <label for="course">Username</label>
            <input type="text" class="form-control" name="username" id="username" required>
        </div>
        <div class="form-group">
            <label for="course">Password</label>
            <input type="password" class="form-control" name="password" id="password" required pattern=".{8,}"
                title="Password must be 8 characters minimum">
        </div>
        <button type="submit" class="btn btn-secondary">Submit</button>
    </form>
</div>