<div class="container my-2">
    <a class="text-dark" href="/">Search Again</a>
</div>

<section id="header" class="jumbotron text-center container mt-4 py-4">
    <h4 class="display-4 mb-3">{{course.[0].courseTitle}}</h4>
    <h5 class="card-title">{{course.[0].collegeName}}, {{course.[0].state}}</h5>
    {{#each majors}}
    <h6 class="card-subtitle mb-2 text-muted">
        <form action="/majorsCourses?_method=DELETE" method="POST">
            <div class="form-row justify-content-center align-items-center">
                <input type="hidden" name="courseID" value="{{this.courseID}}">
                <input type="hidden" name="majorID" value="{{this.majorID}}">
                <div class="col-1">
                    {{this.majorTitle}}   
                </div>
                <div class="col-1">
                    <button class="btn btn-sm btn-dark">Remove Major</button>
                </div>
            </div>
        </form>
    </h6>
    {{/each}}
    <a href="" class="btn btn-lg btn-warning">Delete Course</a>
</section>

<section id="reviews">
    <div class="container px-0">
        {{#unless rows}}
        <h5 class="row justify-content-center my-5">Course does not have reviews</h5>
        {{/unless}}

        {{#each rows}}
        <div class="row justify-content-center">
            <div class="col-sm-12 mb-4">
                <div class="card">
                    <img class="card-img-top" src="" alt="">
                    <div class="card-body">
                        <h5 class="card-title">{{this.reviewTitle}}</h5>
                        <div class="row justify-content-between mx-0">
                            <h6 class="card-subtitle mb-2 text-muted">Difficulty - {{this.difficultyRating}}/10</h6>
                            <h6 class="card-subtitle mb-2 text-muted">Workload - {{this.workloadRating}}/10</h6>
                            <h6 class="card-subtitle mb-2 text-muted">Interest - {{this.interestRating}}/10</h6>
                        </div>
                        {{#if this.comments}}
                        <p class="card-text">{{this.comments}}</p>
                        {{/if}}
                        <a href="" class="btn btn-outline-success btn-sm">Edit</a>
                        <a href="" class="btn btn-outline-danger btn-sm">Delete</a>
                        {{#if this.authorID}}
                        <p class="mt-3 mb-0"><a href="/profile/{{this.authorID}}" class="font-italic text-muted">Author - {{this.username}}</a>
                        </p>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
        {{/each}}

    </div>
</section>